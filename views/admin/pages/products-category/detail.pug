extends ../../layout/default.pug 
block main 
    if(record.title)
        h1(class="mb-4") #{record.title}
    if(record.parent_id)
        h1(class="mb-4") #{parentTitle}


    if(record.thumbnail)
        div(class="mb-4")
            img(
                src = record.thumbnail
                style="width: 100px"
            ) 
    if(record.status)
        div(class= "mb-4")
            span Trạng thái :
        if(record.status === "active")
            a.btn.btn-success() Hoạt động
        else
            a.btn.btn-danger() Dừng hoạt động 
    if(record.position)
        div(class="mb-4") Vị trí <b>#{record.position}</b>

    if(record.description)
        div(class="mb-4")  !{record.description}  
    a(
        class="btn btn-warning btn-sm"
        href=`${prefixAdmin}/products-category/edit/${record.id}`
    ) Chỉnh sửa  


    script(src="/admin/js/product.js") 