extends ../../layout/default.pug 
block main 
    h1(class="mb-4") #{pageTitle}
    if(user.avatar)
        img(
            src=user.avatar
            width="150px"
            class="mb-3"
        )
    else
        img(
                src="/admin/images/avatar.png"
                width="150px"
                class="mb-3"
            )
    if(user.email)
        p Họ và Tên : <b>#{user.email}</b> 
    if(user.phone)
        p Phone : <b>#{user.phone}</b>
    p 
        span Trạng thái 
        span 
            <b>#{user.status==="active" ?"Hoạt động":"Dừng hoạt động"} </b> 
    if(role.title)
        p Phân quyền :  <b>#{role.title}</b>  
    a(
        href=`${prefixAdmin}/my-account/edit`
        class="btn btn-primary"
    ) Chỉnh sửa thông tin   


