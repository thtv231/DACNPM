extends ../../layout/default.pug 
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/moment.pug
block main 
    if(role.permissions.includes("products-view")) 

        +alert(3000)

        h1 Danh sách sản phẩm 

        .card.mb-3 
            .card-header Bộ lọc và tìm kiếm 
            .card-body
                .row
                    .col-6 
                        +filter-status(filterStatus)
                    .col-6 
                        +form-search(keyword)
        .card.mb-3 
            .card-header Danh sách
            .card-body
                .row 
                    .col-10
                        if(role.permissions.includes("products-edit")) 
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`) 
                    .col-2 
                        if(role.permissions.includes("products-create")) 
                            a(
                                href=`${prefixAdmin}/products/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới
        .card.mb-3 
            .card-header Sắp xếp 
            .card-body
                .row 
                    .col-4 
                        div(sort)
                            select(
                                class="form-control"
                                name="sort"
                                sort-select
                            ) 
                                option() --Chọn hành động--
                                option(value="position-desc") Vị trí giảm dần                      
                                option(value="position-asc") Vị trí tăng dần                      
                                option(value="price-desc") Giá giảm dần                      
                                option(value="price-asc") Giá tăng  dần                      
                                option(value="discountPercentage-desc") Discount               
                                option(value="title-asc") Tiêu đề A-Z                     
                                option(value="title-desc") Tiêu đề Z-A  
                            button(
                                class="btn btn-danger mt-2"
                                sort-clear
                            )   Clear                 
                table(
                    class = "table table-hover table-sm"
                    checkbox-multi
                )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name ="checkall")
                            th STT
                            th Hình Ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Hành động 

                    tbody 
                        each item,index in products
                            tr
                                td 
                                    input(
                                        type = "checkbox"
                                        name = "id"
                                        value = item.id
                                    ) 
                                td #{pagination.limitItems*(pagination.currentPage-1)+(index+1)}
                                td
                                    img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    input(
                                        type = "number"
                                        value = item.position 
                                        style = "width: 60px"
                                        min="1"
                                        name="position"
                                    )
                                td
                                    if(role.permissions.includes("products-edit")) 
                                        if(item.status=="active")
                                        
                                            a.btn.btn-success(
                                                data-id = item.id
                                                data-status = item.status
                                                button-change-status 
                                                href="javascript:;"
                                            ) Hoạt động
                                        else 
                                            a.btn.btn-danger(
                                                data-id = item.id
                                                data-status = item.status
                                                button-change-status 
                                                href="javascript:;"
                                            
                                            
                                            ) Dừng hoạt động
                                    
                                    
                                td 
                                    p #{item.fullName}    
                                    +formatDateTime(item.createdBy.createAt)
                                td 
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${prefixAdmin}/products/detail/${item.id}`
                                    ) Chi tiết
                                    if(role.permissions.includes("products-edit")) 
                                        a(
                                            class="btn btn-warning btn-sm"
                                            href=`${prefixAdmin}/products/edit/${item.id}`
                                        ) Sửa
                                    if(role.permissions.includes("products-delete")) 
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            data-id = item.id 
                                            button-delete
                                            ) Xóa 
                            tr 
    //- 
    +pagination(pagination)
    form(
        id = "form-change-status"
        path=`${prefixAdmin}/products/change-status`
        action="", 
        method="POST") 

    form(
        id = "form-delete-item"
        path=`${prefixAdmin}/products/delete`
        action="" 
        method="POST")     


    script(src="/admin/js/products.js")      
    script(src="/admin/js/script.js")      




        